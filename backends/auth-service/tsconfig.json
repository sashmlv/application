{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@*": ["src/*"],
      "@packages/*": ["../packages/*"]
    }
  },
  "include": [
    "./src/main.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
